extends layout
include functions/star
block content
  #banner.page-header
    .row 
      .col-lg-6
        h1 
          | MekanBul 
          small &nbsp; Civardaki mekanları keşfet!
    .row
      each item in mekan
        .row.list-group 
        .col-xs-12.col-sm-12 
          .col-xs-12.list-group-item
            h4 
              a(href='/mekan') #{item.name}
              small &nbsp;
              +puanOlustur(item.puan)
            span.badge.pull-right.badge-default #{item.mesafe}
            p.address  #{item.adres}  
            p   
              span.label.label-danger Pub
              | &nbsp;
              span.label.label-warning Açık